@import '../../node_modules/vuetify/src/stylus/main'
@import '~vuetify-stylus-fixed-table-header';

html {
  overflow-y: auto
}

.title {
  width: 300px;
}

.toolbar {
}

.project-logo {
  height: 40px !important;
  margin: 4px;
}

.diagramButton {
  margin-right: 20px !important;
}

.diagramPopup {
  .diagramImage {
    display: block;
    margin: 0px auto;
    max-width: 100%;
    text-align: center;

    &> img {
      max-width: 100%;
      text-align: center;
    }
  }

  .btn {
    color: #FDB836;
  }
}

.tablePanel {
  border-right: 1px solid #999999 !important;
}

.recordsTable {
  fixed-table-header(55vh);
}

.detailsPanel {
  box-shadow: none;
  height: 100%;

  .jsonView {
    white-space: normal !important;
    font-size: 12px;
  }

  .jsonView > .spacing {
    display: none;
  }
}

.timelinePanel {
  border-top: 1px solid #999999 !important;

  .includeLogs {
    width: 150px;
    text-align: right;
    position: absolute;
    right: 0px;
    top: 10px;

    &> div {
      margin-top: 0px;
    }
  }

  .vis-item.trial {
    border-color: #ffbb33;
    background-color: #ffeebb;
  }

  .vis-item.scenario {
    border-color: lighten(#ffbb33, 10);
    background-color: lighten(#ffeebb, 6);
  }

  .vis-item.session {
    border-color: lighten(#ffbb33, 15);
    background-color: lighten(#ffeebb, 12);
  }

  .vis-item.Alert {
    background-color: #ffeedd;
    border-color: #ffbb99;
  }

  .vis-item.Log {
    background-color: #d5ddf6;
    border-color: #97b0f8;
  }

  .vis-item.LargeDataUpdate {
    background-color: #eeeeee;
    border-color: #aaaaaa;
  }

  .vis-item.GeoJSONEnvelope {
    background-color: #ddffdd;
    border-color: #99ff99;
  }

