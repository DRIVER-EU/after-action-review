.timelinePanel {
  .includeLogs {
    width: 150px;
    text-align: right;
    position: absolute;
    right: 0px;
    top: 10px;
  }

  .vis-item.trial {
    border-color: #ffbb33;
    background-color: #ffeebb;
  }

  .vis-item.scenario {
    border-color: lighten(#ffbb33, 10);
    background-color: lighten(#ffeebb, 7);
  }

  .vis-item.session {
    border-color: lighten(#ffbb33, 20);
    background-color: lighten(#ffeebb, 14);
  }

  .vis-item.Alert {
    background-color: #ffeedd;
    border-color: #ffbb99;
  }

  .vis-item.Log {
    background-color: #d5ddf6;
    border-color: #97b0f8;
  }

  .vis-item.LargeDataUpdate {
    background-color: #eeeeee;
    border-color: #aaaaaa;
  }

  .vis-item.GeoJSONEnvelope {
    background-color: #ddffdd;
    border-color: #99ff99;
  }

